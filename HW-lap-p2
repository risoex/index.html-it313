<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title> class average program: sentinel-controlled repetition</title>
        <script>
            var total;
            var gradeCounter;
            var grade;
            var gradeValue;
            var average;

            total = 0;
            gradeCounter = 0;

            
        
            grade = window.prompt ( "Enter integer grade: , -1 to quite" , "0");

            gradeValue = parseInt( grade );
             
            while ( gradeValue != -1 )
        {

            total = total + gradeValue;
            
            gradeCounter = gradeCounter + 1;

            grade = window.prompt ( "Enter integer grade: , -1 to quite" , "0");

            gradeValue = parseInt( grade );
        }

        if (gradeCounter !=0 )
        {
        average = total / gradeCounter;
        
        document.writeln("<h1>Class average is" + average +"</h1>");
        }
        else
        document.writeln("<p> no grades were enterd</p>");
        </script>
    </head><body></body>
</html>
